<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/categoryImage"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_gravity="left|center_vertical"
        android:adjustViewBounds="true"
        android:layout_margin="@dimen/_5sdp"
        android:scaleType="fitXY"
        android:src="@mipmap/duet_dummy"
        android:visibility="gone" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/parent"
        android:orientation="horizontal"
        android:visibility="visible">

        <TextView
            android:id="@+id/resultEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginLeft="@dimen/_2sdp"
            android:layout_marginRight="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:fontFamily="@font/baloobold"
            android:gravity="top|left"
            android:inputType="textMultiLine"
            android:hint="Hi my name is.."
            android:minHeight="@dimen/_25sdp"
            android:paddingLeft="@dimen/_15sdp"
            android:paddingTop="@dimen/_5sdp"
            android:paddingBottom="@dimen/_5sdp"
            android:paddingRight="@dimen/_5sdp"
            android:textColor="@color/storycolor"
            android:textColorHint="#7D7D91"
            android:textSize="@dimen/_15sdp" />

        <TextView
            android:id="@+id/categoryText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/parent"
            android:layout_marginRight="@dimen/_100sdp"
            android:layout_marginBottom="@dimen/_2sdp"
            android:textSize="@dimen/_14sdp"
            android:drawableLeft="@drawable/play"
            android:visibility="gone" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</LinearLayout>



